{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",

    "allowJs": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

  "noUnusedLocals": true,
  "noUnusedParameters": true,
  },
  "include": ["src"]
}
